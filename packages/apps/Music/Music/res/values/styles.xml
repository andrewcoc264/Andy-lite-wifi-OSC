<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.Holo.Translucent.NoActionBar"  parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
       <item name="android:windowIsTranslucent">true</item>
        <!-- Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used. -->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
    
    <style name="MusicMediaPlaybackTheme" parent="@android:style/Theme.Material">
         <item name="android:actionBarSize">64dp</item>
         <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_wht_24dp</item>
         <item name="android:actionBarStyle">@style/Theme.MyActionBar</item>
         <item name="android:actionOverflowButtonStyle">@style/MusicOverflowButton</item>
        </style>
     <style name="Theme.MyActionBar"  parent="@android:style/Widget.Holo.ActionBar">
           <item name="android:windowBackground">@android:color/transparent</item>
           <item name="android:displayOptions">showTitle</item>
           <item name="android:background">#1a1a1a</item>
     </style>
   <style name="MusicOverflowButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">  
    <item name="android:src">@drawable/ic_menu_overflow</item>  
    <item name="android:background">#1a1a1a</item>  
   </style>  
      <style name="MusicMediaBrowserTheme" parent="@android:style/Theme.Material">
         <item name="android:actionBarSize">64dp</item>
         <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_wht_24dp</item>
         <item name="android:actionBarStyle">@style/MediaBrowserActionBar</item>
         <item name="android:windowBackground">@android:color/white</item>
         </style>
     <style name="MediaBrowserActionBar"  parent="@android:style/Widget.Holo.ActionBar">
           <item name="android:displayOptions">showTitle</item>
           <item name="android:background">#1a1a1a</item>
     </style>
    
      <style name="Theme.DialogNoTitile" parent="@android:style/Theme.Material.Dialog">
        <item name="android:windowNoDisplay">true</item>
    </style>
    <!-- HQ_pangxuhi  2015-5-21 add   begin -->
    <style name="Theme.DialogNoTitile.Light" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:windowNoDisplay">true</item>
    </style>
    <!-- HQ_pangxuhui End -->
    
    <style name="MusicTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
    </style>

    <style name="MusicBrowserTheme" parent="@android:style/Theme.Material.Light">
        <item name="android:actionBarStyle">@style/MusicBrowserActionBarStyle</item>
        <item name="android:statusBarColor">@android:color/black</item>
        </style>
    <!-- HQ_yulisuo 2015-5-5 modified end -->

    <style name="MusicBrowserActionBarStyle" parent="@android:style/Widget.Material.ActionBar.Solid">
        <item name="android:background">#ff212121</item>
        <item name="android:displayOptions"></item>
    </style>
    <style name="AppTheme" parent="@android:style/Theme.Material.Light">

        <item name="android:colorPrimary">#e6e6e6</item>
        <item name="android:colorPrimaryDark">#000000</item>
	<item name="android:textColorPrimary">#000000</item>
    </style>
</resources>
